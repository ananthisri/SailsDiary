<div class="formcss">

<form action="/user/update/<%= user.id %>" method="POST" class="form-signin">
	<h2 class="form-signin-heading"> Hey, you're editing a user...</h2><br />

	<div class="textbox">

	<input value="<%= user.name %>" name="name" type="text" class="form-control" /><br />
	<input value="<%= user.email %>" name="email" type="text" class="form-control" /><br /><br />
	<input value="<%= user.place %>" name="place" type="text" class="form-control" /><br /><br />
	<input value="<%= user.food %>" name="food" type="text" class="form-control" /><br /><br />
	<input value="<%= user.movie %>" name="movie" type="text" class="form-control" /><br /><br />
	<input value="<%= user.color %>" name="color" type="text" class="form-control" /><br /><br />
	<input value="<%= user.actor %>" name="actor" type="text" class="form-control" /><br /><br />
	<input value="<%= user.actress %>" name="actress" type="text" class="form-control" /><br /><br />
	<input value="<%= user.achieve %>" name="achieve" type="text" class="form-control" /><br /><br />
	<input value="<%= user.memory %>" name="memory" type="text" class="form-control" /><br /><br />
	<input value="<%= user.crush %>" name="crush" type="text" class="form-control" /><br /><br />
	<input value="<%= user.lover %>" name="lover" type="text" class="form-control" /><br /><br />
	<input value="<%= user.pet %>" name="pet" type="text" class="form-control" /><br /><br />
	<input value="<%= user.gift %>" name="gift" type="text" class="form-control" /><br /><br />
	<input value="<%= user.phobia %>" name="phobia" type="text" class="form-control" /><br /><br />

	</div>

	<% if(session.authenticated && session.User.admin) { %>
		<% if(user.admin) { %>
			<input type="hidden" name="admin" value="unchecked">
			<label class="checkbox"><input type="checkbox" name="admin" checked> Admin</label>
		<% } else { %>
			<input type="hidden" name="admin" value="unchecked">
			<label class="checkbox"><input type="checkbox" name="admin"> Admin</label>
		<% } %>
	<% } %>

	<input type="submit" value="proceed" class="btn btn-lg btn-primary btn-block" />
	<input type="hidden" name="_csrf" value="<%= _csrf %>" />
</form>

</div>